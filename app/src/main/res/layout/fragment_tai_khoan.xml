<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.TaiKhoanFragment">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/anh"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Welcome to WeCycle !"
            android:textColor="@color/key"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <!-- Account Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/admin_addPost"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Đăng Bài"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_search"
                android:visibility="gone"/>
            <Button
                android:id="@+id/admin_addDT"
                android:layout_width="match_parent"
                android:text="Thêm điểm thu"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_search"
                android:visibility="gone"/>
            <Button
                android:id="@+id/btnDXuat"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Đăng Xuất"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_search"/>
            <Button
                android:id="@+id/btnHuyTK"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Hủy tài khoản"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_search"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>