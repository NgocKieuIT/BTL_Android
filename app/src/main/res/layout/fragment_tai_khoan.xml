<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiKhoanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp"/>

        <!-- Account Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Thông tin tài khoản"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvOrderCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Số lượng đơn của bạn"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvMaterialWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Khối lượng vật liệu mà bạn đóng góp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvDangXuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Đăng xuất"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvHuyTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Hủy tài khoản"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:background="#F0F0F0"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>